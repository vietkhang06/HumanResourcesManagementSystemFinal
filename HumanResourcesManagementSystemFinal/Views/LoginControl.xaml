<UserControl x:Class="HumanResourcesManagementSystemFinal.Views.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:HumanResourcesManagementSystemFinal.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:LoginViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">

    <Grid Margin="40">
        <StackPanel VerticalAlignment="Center">

            <TextBlock Text="Xin Chào!" FontSize="28" FontWeight="Bold" Foreground="#102f76" Margin="0,0,0,10"/>
            <TextBlock Text="Vui lòng đăng nhập để tiếp tục" Foreground="#FF020C23" Margin="0,0,0,30"/>

            <TextBlock Text="Tên đăng nhập" FontWeight="SemiBold" Foreground="#102f76"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                     Height="40" VerticalContentAlignment="Center" Padding="10,0" Margin="0,5,0,15"
                     BorderBrush="#ddd" BorderThickness="1">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <TextBlock Text="Mật khẩu" FontWeight="SemiBold" Foreground="#102f76"/>
            <PasswordBox x:Name="txtPassword"
                         Height="40" VerticalContentAlignment="Center" Padding="10,0" Margin="0,5,0,10"
                         BorderBrush="#ddd" BorderThickness="1">
                <PasswordBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </PasswordBox.Resources>
            </PasswordBox>

            <Button Content="Quên mật khẩu?" 
                    Command="{Binding NavigateToForgotPasswordCommand}" 
                    HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" 
                    Foreground="#102f76" Cursor="Hand" Margin="0,0,0,20"/>

            <Button Content="ĐĂNG NHẬP" 
                    Command="{Binding LoginCommand}"
                    CommandParameter="{Binding ElementName=txtPassword}"
                    Height="45" Background="#102f76" Foreground="#f9f8f6" 
                    FontSize="16" FontWeight="Bold" Cursor="Hand" BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>

        </StackPanel>
    </Grid>
</UserControl>