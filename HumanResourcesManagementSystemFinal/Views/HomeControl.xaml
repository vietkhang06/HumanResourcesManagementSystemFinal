<UserControl x:Class="HumanResourcesManagementSystemFinal.Views.HomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:HumanResourcesManagementSystemFinal.ViewModels"
             xmlns:converters="clr-namespace:HumanResourcesManagementSystemFinal.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1100" Background="Transparent">

    <UserControl.DataContext>
        <vm:HomeViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <converters:EmployeeIdToImageConverter x:Key="IdToImageConverter"/>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="MetricNumberStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="Foreground" Value="#0F172A"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="MetricLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>

        <Style x:Key="CardPanel" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,20,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" Opacity="0.05" ShadowDepth="4" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,5,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,10,0,30">
                <StackPanel>
                    <TextBlock Text="{Binding GreetingMessage, StringFormat='{}{0},'}" 
                               FontSize="16" Foreground="#64748B"/>
                    <TextBlock Text="{Binding DataContext.CurrentUserName, RelativeSource={RelativeSource AncestorType=Window}, TargetNullValue='Quản Trị Viên'}"
                               FontSize="28" FontWeight="Bold" Foreground="#1E293B"/>
                </StackPanel>

                <Button Command="{Binding LoadDashboardDataCommand}" 
                        HorizontalAlignment="Right" VerticalAlignment="Top"
                        Background="White" BorderBrush="#E2E8F0" BorderThickness="1" 
                        Padding="15,8" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M17.65 6.35A7.958 7.958 0 0012 4c-4.42 0-8 3.58-8 8s3.58 8 8 8c3.73 0 6.84-2.55 7.73-6h-2.08A5.99 5.99 0 0112 18c-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z" 
                              Fill="#64748B" Width="12" Height="12" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Làm mới" FontSize="13" FontWeight="SemiBold" Foreground="#475569"/>
                    </StackPanel>
                </Button>
            </Grid>

            <Border Grid.Row="1" Style="{StaticResource CardPanel}" Padding="30,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="TỔNG NHÂN SỰ" Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock Text="{Binding TotalEmployees}" Style="{StaticResource MetricNumberStyle}"/>
                        </StackPanel>
                    </Grid>

                    <Rectangle Grid.Column="1" Width="1" Fill="#F1F5F9" Margin="15,5"/>

                    <Grid Grid.Column="2" Margin="30,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="ĐANG LÀM VIỆC" Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock Text="{Binding AttendanceStatus}" Style="{StaticResource MetricNumberStyle}" Foreground="#166534"/>
                        </StackPanel>
                    </Grid>

                    <Rectangle Grid.Column="3" Width="1" Fill="#F1F5F9" Margin="15,5"/>

                    <Grid Grid.Column="4" Margin="30,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="CHỜ DUYỆT" Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock Text="{Binding PendingLeavesList.Count}" Style="{StaticResource MetricNumberStyle}" Foreground="#EA580C"/>
                        </StackPanel>
                    </Grid>

                    <Rectangle Grid.Column="5" Width="1" Fill="#F1F5F9" Margin="15,5"/>

                    <Grid Grid.Column="6" Margin="30,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="SẮP HẾT HẠN" Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock Text="{Binding ExpiringContractEmployees.Count}" Style="{StaticResource MetricNumberStyle}" Foreground="#DC2626"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Border Background="#FEF2F2" BorderBrush="#FECACA" BorderThickness="1">
                        <Border.Style>
                            <Style TargetType="Border" BasedOn="{StaticResource CardPanel}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ExpiringContractEmployees.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <StackPanel>
                            <TextBlock Text="⚠️ CẢNH BÁO HỢP ĐỒNG" FontSize="13" FontWeight="Bold" Foreground="#991B1B" Margin="0,0,0,10"/>
                            <ItemsControl ItemsSource="{Binding ExpiringContractEmployees}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,8">
                                            <TextBlock>
                                                <Run Text="{Binding FullName, Mode=OneWay}" FontWeight="Bold" Foreground="#7F1D1D"/>
                                                <Run Text=" - Sắp hết hạn trong 30 ngày tới" Foreground="#B91C1C"/>
                                            </TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource CardPanel}">
                        <StackPanel>
                            <DockPanel LastChildFill="False" Margin="0,0,0,15">
                                <TextBlock Text="Đơn Từ Cần Duyệt" Style="{StaticResource HeaderStyle}" Margin="0"/>
                                <Border Background="#F1F5F9" CornerRadius="12" Padding="12,4" DockPanel.Dock="Right">
                                    <TextBlock Text="{Binding PendingLeavesList.Count, StringFormat='{}{0} Yêu cầu'}" 
                                               FontSize="12" FontWeight="SemiBold" Foreground="#64748B"/>
                                </Border>
                            </DockPanel>

                            <DataGrid ItemsSource="{Binding PendingLeavesList}" 
                                      AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" 
                                      CanUserResizeColumns="False" CanUserReorderColumns="False" IsReadOnly="True"
                                      GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                      Background="White" BorderThickness="0"
                                      HorizontalGridLinesBrush="#F1F5F9"
                                      RowHeaderWidth="0"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#94A3B8"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="Padding" Value="10,0,0,15"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                    </Style>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="Padding" Value="0,15"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush" Value="#F1F5F9"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="NHÂN VIÊN" Width="2*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Margin="10,0">
                                                    <TextBlock Text="{Binding Employee.FullName}" FontWeight="Bold" Foreground="#334155"/>
                                                    <TextBlock Text="{Binding Employee.Department.DepartmentName}" FontSize="11" Foreground="#94A3B8"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="THỜI GIAN / LÝ DO" Width="2.5*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Foreground="#334155">
                                                        <Run Text="{Binding StartDate, StringFormat=dd/MM}"/>
                                                        <Run Text=" ➜ " Foreground="#CBD5E1"/>
                                                        <Run Text="{Binding EndDate, StringFormat=dd/MM}"/>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding Reason}" FontSize="12" Foreground="#64748B" FontStyle="Italic"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="" Width="Auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                                                    <Button Command="{Binding DataContext.ApproveLeaveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                            CommandParameter="{Binding}"
                                                            Content="Duyệt" 
                                                            Background="#DCFCE7" Foreground="#15803D" FontWeight="Bold" FontSize="11"
                                                            BorderThickness="0" Cursor="Hand" Padding="12,6" Margin="0,0,8,0">
                                                        <Button.Resources>
                                                            <Style TargetType="Border">
                                                                <Setter Property="CornerRadius" Value="6"/>
                                                            </Style>
                                                        </Button.Resources>
                                                    </Button>

                                                    <Button Command="{Binding DataContext.RejectLeaveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                            CommandParameter="{Binding}"
                                                            Content="Từ chối" 
                                                            Background="#FEE2E2" Foreground="#B91C1C" FontWeight="Bold" FontSize="11"
                                                            BorderThickness="0" Cursor="Hand" Padding="12,6">
                                                        <Button.Resources>
                                                            <Style TargetType="Border">
                                                                <Setter Property="CornerRadius" Value="6"/>
                                                            </Style>
                                                        </Button.Resources>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Visibility="{Binding PendingLeavesList.Count, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}"
                                        HorizontalAlignment="Center" Margin="0,30">
                                <TextBlock Text="🎉" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock Text="Không có yêu cầu nào cần xử lý" Foreground="#94A3B8" FontStyle="Italic"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1">

                    <Border Style="{StaticResource CardPanel}">
                        <StackPanel>
                            <TextBlock Text="Nhân Sự Mới" Style="{StaticResource HeaderStyle}"/>

                            <ItemsControl ItemsSource="{Binding RecentEmployees}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Ellipse Width="36" Height="36">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding EmployeeID, Converter={StaticResource IdToImageConverter}}" 
                                                                Stretch="UniformToFill"/>
                                                </Ellipse.Fill>
                                                <Ellipse.Stroke>
                                                    <SolidColorBrush Color="#E2E8F0"/>
                                                </Ellipse.Stroke>
                                                <Ellipse.StrokeThickness>1</Ellipse.StrokeThickness>
                                            </Ellipse>

                                            <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding FullName}" FontWeight="Bold" Foreground="#334155" FontSize="13"/>
                                                <TextBlock Text="{Binding HireDate, StringFormat='Ngày vào: {0:dd/MM}'}" FontSize="11" Foreground="#94A3B8"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Lối Tắt" FontSize="14" FontWeight="Bold" Foreground="#64748B" Margin="0,0,0,10"/>

                    <Button Click="BtnAddEmployee_Click" Height="50" Margin="0,0,20,10"
                            Background="White" BorderThickness="0" Cursor="Hand" HorizontalContentAlignment="Left" Padding="15,0">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="10" Opacity="0.05" ShadowDepth="2" Color="Black"/>
                        </Button.Effect>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="White" CornerRadius="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Width="28" Height="28" Fill="#EFF6FF"/>
                                        <TextBlock Text="+" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#2563EB" FontWeight="Bold" FontSize="16"/>

                                        <TextBlock Grid.Column="1" Text="Thêm Nhân Viên" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#334155"/>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Command="{Binding DataContext.NavigatePayrollCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            Height="50" Margin="0,0,20,0"
                            Background="White" BorderThickness="0" Cursor="Hand" HorizontalContentAlignment="Left" Padding="15,0">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="10" Opacity="0.05" ShadowDepth="2" Color="Black"/>
                        </Button.Effect>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="White" CornerRadius="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Width="28" Height="28" Fill="#F0FDF4"/>
                                        <TextBlock Text="$" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#16A34A" FontWeight="Bold" FontSize="14"/>

                                        <TextBlock Grid.Column="1" Text="Tính Lương" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#334155"/>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>