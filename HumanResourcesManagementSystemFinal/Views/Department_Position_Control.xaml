        <Geometry x:Key="IconHandLeft">M21.5 13.4l-7.7-2.6c-.6-.2-1.3.1-1.5.7l-.3 1 2.3.8c.8.3 1.2 1.1.9 1.9s-1.1 1.2-1.9.9l-8.6-2.9c-1.3-.4-2-.2-2.3.1-.3.3-.4 1 .2 2.3l4.9 10.9c.7 1.6 2.3 2.6 4.1 2.6h7.9c1.9 0 3.6-1.3 4-3.2l1.6-7.9c.3-1.8-.9-3.6-2.7-4.1-.3-.1-.6-.1-.9-.1-.6 0-1.1.2-1.6.6l1.6-1z</Geometry>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="10,0,0,15"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#F1F5F9"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8FAFC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" Background="Transparent">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" CornerRadius="12" Margin="0,0,15,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Opacity="0.05" ShadowDepth="4" Color="Black"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="20,25,20,15">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Phòng Ban" FontSize="20" FontWeight="Bold" Foreground="#1A3D64"/>
                    </StackPanel>
                    <TextBlock Text="Quản lý danh sách phòng ban" FontSize="12" Foreground="#94A3B8"/>
                </StackPanel>

                <ListBox Grid.Row="1" ItemsSource="{Binding Departments}" SelectedItem="{Binding SelectedDepartment}"
                         BorderThickness="0" Background="Transparent" Margin="10,0"
                         HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Margin" Value="0,4"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="border" Background="Transparent" CornerRadius="8" Padding="12,10" Cursor="Hand" BorderThickness="1" BorderBrush="#F1F5F9">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#F8FAFC"/>
                                                <Setter TargetName="border" Property="BorderBrush" Value="#E2E8F0"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#EBF8FF"/>
                                                <Setter TargetName="border" Property="BorderBrush" Value="#4299E1"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Width="40" Height="40" CornerRadius="8" Background="#EFF6FF">
                                    <Path Data="{StaticResource IconBuilding}" Fill="#3B82F6" Width="18" Height="18" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0">
                                    <TextBlock Text="{Binding DepartmentName}" FontWeight="Bold" Foreground="#334155" FontSize="14"/>
                                    <TextBlock Text="{Binding Location}" FontSize="12" Foreground="#64748B" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,0,5,0" ToolTip="Sửa"
                                            Command="{Binding DataContext.EditDepartmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                        <Path Data="{StaticResource IconEdit}" Fill="#64748B" Width="14" Height="14" Stretch="Uniform"/>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="Transparent" Padding="5" CornerRadius="4">
                                                                <ContentPresenter/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Opacity" Value="0.7"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <Button Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="Xóa"
                                            Command="{Binding DataContext.DeleteDepartmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                        <Path Data="{StaticResource IconDelete}" Fill="#EF4444" Width="14" Height="14" Stretch="Uniform"/>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="Transparent" Padding="5" CornerRadius="4">
                                                                <ContentPresenter/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Opacity" Value="0.7"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button Grid.Row="2" Command="{Binding AddDepartmentCommand}" Margin="20" Height="45"
                        Background="#1A3D64" Foreground="White" FontWeight="Bold" Cursor="Hand" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{StaticResource IconAdd}" Fill="White" Width="12" Height="12" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Thêm Phòng Ban"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <Border Grid.Column="1" Background="White" CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Opacity="0.05" ShadowDepth="4" Color="Black"/>
            </Border.Effect>

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,5,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Danh Sách Chức Vụ" FontSize="20" FontWeight="Bold" Foreground="#1A3D64"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock Text="Thuộc phòng ban: " Foreground="#64748B" FontSize="13"/>
                            <TextBlock Text="{Binding SelectedDepartment.DepartmentName, TargetNullValue='(Chưa chọn)'}" FontWeight="Bold" Foreground="#3182CE" FontSize="13"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Grid.Column="1" Command="{Binding AddPositionCommand}"
                            Background="#1A3D64" Foreground="White" Height="40" Padding="15,0" BorderThickness="0" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconAdd}" Fill="White" Width="12" Height="12" Stretch="Uniform" Margin="0,0,8,0"/>
                            <TextBlock Text="Thêm Chức Vụ" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <DataGrid Grid.Row="1" ItemsSource="{Binding Positions}" 
                          AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" 
                          GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#F1F5F9"
                          Background="White" BorderThickness="0" HeadersVisibility="Column">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="MÃ VT" Binding="{Binding PositionID}" Width="80" Foreground="#64748B"/>

                        <DataGridTemplateColumn Header="TÊN CHỨC VỤ" Width="2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding PositionName}" FontWeight="Bold" Foreground="#334155" VerticalAlignment="Center"/>

                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="MÔ TẢ CÔNG VIỆC" Binding="{Binding JobDescription}" Width="3*" Foreground="#475569"/>

                        <DataGridTemplateColumn Header="HÀNH ĐỘNG" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,0,10,0" ToolTip="Sửa"
                                                Command="{Binding DataContext.EditPositionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}">
                                            <Path Data="{StaticResource IconEdit}" Fill="#64748B" Width="14" Height="14" Stretch="Uniform"/>
                                        </Button>

                                        <Button Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="Xóa"
                                                Command="{Binding DataContext.DeletePositionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}">
                                            <Path Data="{StaticResource IconDelete}" Fill="#EF4444" Width="14" Height="14" Stretch="Uniform"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Border Grid.Row="1" Background="White" Opacity="0.95">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedDepartment}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Border Background="#F1F5F9" Width="80" Height="80" CornerRadius="40" Margin="0,0,0,15">
                            <Path Data="{StaticResource IconHandLeft}" Fill="#94A3B8" Width="40" Height="40" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Vui lòng chọn một phòng ban" FontSize="18" FontWeight="Bold" Foreground="#475569" HorizontalAlignment="Center"/>
                        <TextBlock Text="Danh sách chức vụ sẽ hiển thị tại đây" FontSize="14" Foreground="#94A3B8" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>