<Window x:Class="HumanResourcesManagementSystemFinal.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:HumanResourcesManagementSystemFinal.Views" 
        mc:Ignorable="d"
        
        Title="Hệ thống Quản lý Nhân sự" 
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="CanResize"
        Icon="/Images/logo PRO.jpg">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" ClipToBounds="True">
            <Image Source="/Images/png1.png" HorizontalAlignment="Center" Stretch="UniformToFill">
                <Image.Effect>
                    <BlurEffect Radius="10" KernelType="Gaussian"/>
                </Image.Effect>
            </Image>

            <Rectangle Fill="Black" Opacity="0.3"/>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Ellipse Width="160" Height="160" Margin="0,0,0,20">
                    <Ellipse.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="White" Opacity="0.4"/>
                    </Ellipse.Effect>
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Images/logo PRO.jpg" Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>

                <TextBlock Text="HUMAN RESOURCE" Foreground="White" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,5">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Text="MANAGEMENT SYSTEM" Foreground="#E0E0E0" FontSize="16" FontWeight="SemiBold" 
                           HorizontalAlignment="Center" TextAlignment="Center"/>

                <TextBlock Text="UIT - IT008.Q14" Foreground="#CCCCCC" FontSize="14" Margin="0,30,0,0"
                           HorizontalAlignment="Center" TextAlignment="Center"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1">
            <ContentControl x:Name="MainFrame" Margin="0"/>
        </Grid>
    </Grid>
</Window>