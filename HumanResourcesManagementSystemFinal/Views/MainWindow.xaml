<Window x:Class="HumanResourcesManagementSystemFinal.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:HumanResourcesManagementSystemFinal.ViewModels"
        mc:Ignorable="d"
        Title="HRMS Pro - Dashboard" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6">

    <d:Window.DataContext>
        <vm:MainViewModel/>
    </d:Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#102f76">
            <StackPanel>
                <TextBlock Text="HRMS PRO" Foreground="White" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,30,0,50"/>

                <Button Content="🏠  Tổng quan" Height="50" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" Padding="30,0" FontSize="16" Cursor="Hand"/>
                <Button Content="👥  Nhân viên" Height="50" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" Padding="30,0" FontSize="16" Cursor="Hand"/>
                <Button Content="🏢  Phòng ban" Height="50" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" Padding="30,0" FontSize="16" Cursor="Hand"/>
                <Button Content="💰  Lương thưởng" Height="50" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" Padding="30,0" FontSize="16" Cursor="Hand"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
                <Grid>
                    <TextBlock Text="{Binding WelcomeMessage}" 
                               VerticalAlignment="Center" HorizontalAlignment="Left" 
                               Margin="20,0,0,0" FontSize="16" FontWeight="SemiBold" Foreground="#374151"/>

                    <Button Content="Đăng xuất" 
                            Command="{Binding LogoutCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                            HorizontalAlignment="Right" Margin="0,0,20,0"
                            Padding="15,5" Background="#EF4444" Foreground="White" FontWeight="Bold" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Border>

            <ContentControl Grid.Row="1" Margin="20">
                <TextBlock Text="Chào mừng đến với hệ thống quản trị nhân sự!" 
                           FontSize="20" Foreground="#9CA3AF" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </ContentControl>
        </Grid>
    </Grid>
</Window>