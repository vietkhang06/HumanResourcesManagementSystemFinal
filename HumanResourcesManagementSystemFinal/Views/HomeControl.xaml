<UserControl x:Class="HumanResourcesManagementSystemFinal.Views.HomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:HumanResourcesManagementSystemFinal.ViewModels"
             xmlns:converters="clr-namespace:HumanResourcesManagementSystemFinal.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1200" Background="Transparent">

    <UserControl.DataContext>
        <vm:HomeViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:BinaryImageConverter x:Key="BinaryImageConverter"/>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="CardPanel" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" Opacity="0.05" ShadowDepth="4" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MetricNumberStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#0F172A"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="MetricLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,10,0,20">
                <StackPanel>
                    <TextBlock Text="{Binding GreetingMessage, StringFormat='{}{0},'}" 
                               FontSize="16" Foreground="#64748B"/>
                    <TextBlock Text="{Binding DataContext.CurrentUserName, RelativeSource={RelativeSource AncestorType=Window}, TargetNullValue='Quản Trị Viên'}"
                               FontSize="28" FontWeight="ExtraBold" Foreground="#1E3A8A"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="0.8*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Grid.ColumnSpan="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="68"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="68"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Background="White" CornerRadius="10" Padding="15,0">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" Opacity="0.05" ShadowDepth="3" Color="#64748B"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding TotalEmployees}" FontSize="22" FontWeight="Bold" Foreground="#1D4ED8" LineHeight="22"/>
                                <TextBlock Text="Tổng nhân sự" FontSize="12" Foreground="#64748B" FontWeight="Medium"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Grid.Row="0" Grid.Column="2" Background="White" CornerRadius="10" Padding="15,0">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" Opacity="0.05" ShadowDepth="3" Color="#64748B"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding AttendanceStatus}" FontSize="22" FontWeight="Bold" Foreground="#15803D" LineHeight="22"/>
                                <TextBlock Text="Đang làm việc" FontSize="12" Foreground="#64748B" FontWeight="Medium"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Grid.Row="2" Grid.Column="0" Background="White" CornerRadius="10" Padding="15,0">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" Opacity="0.05" ShadowDepth="3" Color="#64748B"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding PendingLeavesList.Count}" FontSize="22" FontWeight="Bold" Foreground="#C2410C" LineHeight="22"/>
                                <TextBlock Text="Đơn chờ duyệt" FontSize="12" Foreground="#64748B" FontWeight="Medium"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Grid.Row="2" Grid.Column="2" Background="White" CornerRadius="10" Padding="15,0">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" Opacity="0.05" ShadowDepth="3" Color="#64748B"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding ExpiringContractEmployees.Count}" FontSize="22" FontWeight="Bold" Foreground="#B91C1C" LineHeight="22"/>
                                <TextBlock Text="Hợp đồng gấp" FontSize="12" Foreground="#64748B" FontWeight="Medium"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <Border Grid.Column="4" Style="{StaticResource CardPanel}">
                    <StackPanel>
                        <TextBlock Text="Nhân Sự Mới" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding RecentEmployees}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="36"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Width="32" Height="32">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding Account.AvatarData, Converter={StaticResource BinaryImageConverter}}" Stretch="UniformToFill"/>
                                            </Ellipse.Fill>
                                            <Ellipse.Stroke>
                                                <SolidColorBrush Color="#E2E8F0"/>
                                            </Ellipse.Stroke>
                                            <Ellipse.StrokeThickness>1</Ellipse.StrokeThickness>
                                        </Ellipse>
                                        <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding FullName}" FontWeight="Bold" FontSize="12" Foreground="#334155"/>
                                            <TextBlock Text="{Binding Department.DepartmentName}" FontSize="10" Foreground="#64748B"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock Text="Không có nhân sự mới" FontSize="11" FontStyle="Italic" Foreground="#94A3B8" 
                                   Visibility="{Binding RecentEmployees.Count, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="6" Style="{StaticResource CardPanel}">
                    <StackPanel>
                        <TextBlock Text="Lối Tắt" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,10"/>

                        <Button Click="BtnAddEmployee_Click" Height="36" Margin="0,0,0,8"
                                Background="#F8FAFC" BorderThickness="1" BorderBrush="#E2E8F0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" BorderThickness="1" BorderBrush="#E2E8F0">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0">
                                            <Path Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" 
                                                  Fill="#2563EB" Width="14" Height="14" Stretch="Uniform"
                                                  VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Text="Thêm Nhân Viên" FontSize="12" VerticalAlignment="Center" Foreground="#334155" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="BorderBrush" Value="#2563EB"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Command="{Binding DataContext.NavigatePayrollCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                Height="36" Background="#F8FAFC" BorderThickness="1" BorderBrush="#E2E8F0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" BorderThickness="1" BorderBrush="#E2E8F0">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0">
                                            <Path Data="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z" 
                                                  Fill="#16A34A" Width="14" Height="14" Stretch="Uniform"
                                                  VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Text="Tính Lương" FontSize="12" VerticalAlignment="Center" Foreground="#334155" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="BorderBrush" Value="#16A34A"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#FEF2F2" BorderBrush="#FECACA" BorderThickness="1" Padding="15" Margin="0,0,0,20">
                        <Border.Style>
                            <Style TargetType="Border" BasedOn="{StaticResource CardPanel}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ExpiringContractEmployees.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="⚠️" Margin="0,0,10,0"/>
                                <TextBlock Text="CẢNH BÁO HỢP ĐỒNG SẮP HẾT HẠN" FontSize="13" FontWeight="Bold" Foreground="#991B1B"/>
                            </StackPanel>
                            <ItemsControl ItemsSource="{Binding ExpiringContractEmployees}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Margin="25,0,0,2">
                                            <Run Text="●" Foreground="#EF4444" FontSize="10"/>
                                            <Run Text="{Binding FullName, Mode=OneWay}" FontWeight="Bold" Foreground="#7F1D1D"/>
                                            <Run Text="- Hết hạn trong 30 ngày" Foreground="#B91C1C" FontSize="11"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1" Style="{StaticResource CardPanel}" Margin="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,15">
                                <TextBlock Text="Đơn Nghỉ Phép Cần Duyệt" Style="{StaticResource HeaderStyle}" Margin="0"/>
                                <Border Background="#F1F5F9" CornerRadius="12" Padding="12,4" DockPanel.Dock="Right">
                                    <TextBlock Text="{Binding PendingLeavesList.Count, StringFormat='{}{0} Đơn'}" 
                                               FontSize="12" FontWeight="SemiBold" Foreground="#64748B"/>
                                </Border>
                            </DockPanel>

                            <DataGrid ItemsSource="{Binding PendingLeavesList}" 
                                    AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" 
                                    CanUserResizeColumns="False" CanUserReorderColumns="False" IsReadOnly="True"
                                    GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                    Background="White" BorderThickness="0"
                                    HorizontalGridLinesBrush="#F1F5F9" RowHeaderWidth="0"
                                    VerticalScrollBarVisibility="Auto"
                                    RowHeight="40">

                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#94A3B8"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="Padding" Value="10,0,0,15"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                    </Style>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="Padding" Value="0,12"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush" Value="#F8FAFC"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="NHÂN VIÊN" Width="2*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Margin="10,0" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Requester.FullName}" FontWeight="Bold" Foreground="#334155"/>
                                                    <TextBlock Text="{Binding Requester.Department.DepartmentName}" FontSize="11" Foreground="#94A3B8"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="THỜI GIAN &amp; LÝ DO" Width="3*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Foreground="#334155">
                                                        <Run Text="{Binding StartDate, StringFormat=dd/MM}"/>
                                                        <Run Text=" ➜ " Foreground="#CBD5E1"/>
                                                        <Run Text="{Binding EndDate, StringFormat=dd/MM}"/>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding Reason}" FontSize="12" Foreground="#64748B" FontStyle="Italic" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="" Width="Auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                                                    <Button Command="{Binding DataContext.ApproveLeaveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                            CommandParameter="{Binding}" Content="✓" 
                                                            Background="#DCFCE7" Foreground="#15803D" FontWeight="Bold" FontSize="11"
                                                            BorderThickness="0" Cursor="Hand" Padding="12,6" Margin="0,0,8,0">
                                                        <Button.Resources>
                                                            <Style TargetType="Border">
                                                                <Setter Property="CornerRadius" Value="6"/>
                                                            </Style>
                                                        </Button.Resources>
                                                    </Button>

                                                    <Button Command="{Binding DataContext.RejectLeaveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                            CommandParameter="{Binding}" Content="✕" 
                                                            Background="#FEE2E2" Foreground="#B91C1C" FontWeight="Bold" FontSize="11"
                                                            BorderThickness="0" Cursor="Hand" Padding="12,6">
                                                        <Button.Resources>
                                                            <Style TargetType="Border">
                                                                <Setter Property="CornerRadius" Value="6"/>
                                                            </Style>
                                                        </Button.Resources>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Grid.Row="1" VerticalAlignment="Center" 
                                        Visibility="{Binding PendingLeavesList.Count, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}"
                                        HorizontalAlignment="Center">
                                <TextBlock Text="🎉" FontSize="30" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock Text="Tuyệt vời! Không có yêu cầu nào cần xử lý." Foreground="#94A3B8" FontStyle="Italic"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <Border Grid.Column="2" Style="{StaticResource CardPanel}" Margin="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,15">
                            <TextBlock Text="Thông Báo Mới" Style="{StaticResource HeaderStyle}" Margin="0"/>
                            <Border Background="#EFF6FF" CornerRadius="12" Padding="12,4" DockPanel.Dock="Right">
                                <TextBlock Text="New" FontSize="11" FontWeight="Bold" Foreground="#2563EB"/>
                            </Border>
                        </DockPanel>

                        <DataGrid Grid.Row="1" ItemsSource="{Binding Notifications}" 
                                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                                  GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                  Background="White" BorderThickness="0"
                                  HorizontalGridLinesBrush="#F1F5F9" RowHeaderWidth="0"
                                  VerticalScrollBarVisibility="Auto">

                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#94A3B8"/>
                                    <Setter Property="Padding" Value="5,10"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                </Style>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Padding" Value="0,12"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#F8FAFC"/>
                                </Style>
                            </DataGrid.Resources>

                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="NỘI DUNG" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="5,0">
                                                <TextBlock Text="{Binding Title}" FontWeight="Bold" Foreground="#334155" TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding Content}" FontSize="11" Foreground="#64748B" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="NGÀY" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding CreatedDate, StringFormat='dd/MM'}" 
                                                       VerticalAlignment="Center" FontSize="11" Foreground="#94A3B8" Margin="10,0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="LOẠI" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="#F1F5F9" CornerRadius="4" Padding="6,2" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding Type}" FontSize="10" FontWeight="SemiBold" Foreground="#475569"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Button Grid.Row="2" Content="Xem tất cả" HorizontalAlignment="Center" Margin="0,15,0,0"
                                Background="Transparent" BorderThickness="0" Foreground="#2563EB" Cursor="Hand" FontSize="12"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>