<UserControl x:Class="HumanResourcesManagementSystemFinal.Views.LeaveRequestControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HumanResourcesManagementSystemFinal.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="Transparent">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1A3D64"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="Control" x:Key="InputControlStyle">
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" CornerRadius="10" Margin="0,0,0,20" Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Direction="-90" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="📝 Tạo Đơn Xin Nghỉ Phép" Style="{StaticResource SectionHeaderStyle}" Grid.Row="0"/>

                <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,15">
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Loại nghỉ:" Foreground="Gray" Margin="0,0,0,5"/>
                        <ComboBox Width="180" Style="{StaticResource InputControlStyle}"
                                  Text="{Binding LeaveType}" IsEditable="True" IsReadOnly="True">
                            <ComboBoxItem Content="Annual" ToolTip="Nghỉ phép năm"/>
                            <ComboBoxItem Content="Sick" ToolTip="Nghỉ ốm"/>
                            <ComboBoxItem Content="Unpaid" ToolTip="Nghỉ không lương"/>
                            <ComboBoxItem Content="Maternity" ToolTip="Thai sản"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Từ ngày:" Foreground="Gray" Margin="0,0,0,5"/>
                        <DatePicker Width="150" Height="35" SelectedDate="{Binding StartDate}"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Đến ngày:" Foreground="Gray" Margin="0,0,0,5"/>
                        <DatePicker Width="150" Height="35" SelectedDate="{Binding EndDate}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,0,0,15">
                    <TextBlock Text="Lý do nghỉ:" Foreground="Gray" Margin="0,0,0,5"/>
                    <TextBox Height="60" TextWrapping="Wrap" AcceptsReturn="True" 
                             Text="{Binding Reason}"
                             BorderBrush="#DDDDDD" Padding="5"/>
                </StackPanel>

                <Button Grid.Row="3" Content="Gửi Đơn" 
                        Command="{Binding SubmitRequestCommand}"
                        Width="120" Height="40" HorizontalAlignment="Right"
                        Background="#1A3D64" Foreground="White" FontWeight="Bold"
                        Cursor="Hand" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Direction="-90" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="📋 Danh Sách Đơn Nghỉ Phép" Style="{StaticResource SectionHeaderStyle}" Grid.Row="0"/>

                <DataGrid Grid.Row="1" ItemsSource="{Binding LeaveRequests}" 
                          AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                          GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                          Background="White" BorderThickness="0" RowHeight="35">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F0F2F5"/>
                            <Setter Property="Foreground" Value="#1A3D64"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="10,0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Padding="{TemplateBinding Padding}" BorderBrush="Transparent" BorderThickness="0" Background="Transparent">
                                            <ContentPresenter VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E6F2FF"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Binding="{Binding Id}" Width="50"/>

                        <DataGridTextColumn Header="Nhân viên" Binding="{Binding Employee.FirstName}" Width="120" FontWeight="SemiBold"/>

                        <DataGridTextColumn Header="Loại" Binding="{Binding LeaveType}" Width="100"/>

                        <DataGridTextColumn Header="Từ ngày" Binding="{Binding StartDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                        <DataGridTextColumn Header="Đến ngày" Binding="{Binding EndDate, StringFormat=dd/MM/yyyy}" Width="100"/>

                        <DataGridTextColumn Header="Lý do" Binding="{Binding Reason}" Width="*"/>

                        <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="Pending">
                                            <Setter Property="Foreground" Value="#F39C12"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Approved">
                                            <Setter Property="Foreground" Value="#27AE60"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                            <Setter Property="Foreground" Value="#C0392B"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Header="Duyệt" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" 
                                                Visibility="{Binding DataContext.IsManager, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}">

                                        <Button ToolTip="Chấp thuận" Margin="0,0,5,0" Width="30" Height="25" Background="#27AE60" BorderThickness="0" Cursor="Hand"
                                                Command="{Binding DataContext.ApproveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}">
                                            <TextBlock Text="✔" Foreground="White" FontWeight="Bold"/>
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="3"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>

                                        <Button ToolTip="Từ chối" Width="30" Height="25" Background="#C0392B" BorderThickness="0" Cursor="Hand"
                                                Command="{Binding DataContext.RejectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}">
                                            <TextBlock Text="✘" Foreground="White" FontWeight="Bold"/>
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="3"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>