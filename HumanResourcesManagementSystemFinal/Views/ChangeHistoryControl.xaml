<UserControl x:Class="HumanResourcesManagementSystemFinal.Views.ChangeHistoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:HumanResourcesManagementSystemFinal.ViewModels"
             Background="White">

    <UserControl.DataContext>
        <vm:ChangeHistoryViewModel/>
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="LỊCH SỬ HOẠT ĐỘNG HỆ THỐNG" FontSize="20" FontWeight="Bold" Foreground="#1A3D64" Margin="0,0,0,20"/>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Histories}" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  IsReadOnly="True"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#F7F7F7"
                  VerticalGridLinesBrush="Transparent"
                  Background="White"
                  BorderThickness="0"
                  HeadersVisibility="Column"
                  RowHeight="45" FontSize="13">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#718096"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="#E2E8F0"/>
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="10,0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Padding="{TemplateBinding Padding}" Background="Transparent">
                                    <ContentPresenter VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="Background" Value="#EBF8FF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="THỜI GIAN" Binding="{Binding ChangeTime, StringFormat='dd/MM/yyyy HH:mm'}" Width="150" Foreground="#4A5568"/>

                <DataGridTemplateColumn Header="NGƯỜI THỰC HIỆN" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👤" Margin="0,0,5,0" Foreground="#2B6CB0"/>
                                <TextBlock Text="{Binding Account.Username}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Account.Employee.FullName, StringFormat=' ({0})'}" Foreground="#718096"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="HÀNH ĐỘNG" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border CornerRadius="4" Padding="8,2" HorizontalAlignment="Left">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ActionType}" Value="CREATE">
                                                <Setter Property="Background" Value="#C6F6D5"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ActionType}" Value="UPDATE">
                                                <Setter Property="Background" Value="#BEE3F8"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ActionType}" Value="DELETE">
                                                <Setter Property="Background" Value="#FED7D7"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding ActionType}" FontWeight="Bold" FontSize="11">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ActionType}" Value="CREATE">
                                                    <Setter Property="Foreground" Value="#22543D"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ActionType}" Value="UPDATE">
                                                    <Setter Property="Foreground" Value="#2A4365"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ActionType}" Value="DELETE">
                                                    <Setter Property="Foreground" Value="#742A2A"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="ĐỐI TƯỢNG" Binding="{Binding TableName}" Width="120" Foreground="#718096"/>

                <DataGridTextColumn Header="CHI TIẾT THAY ĐỔI" Binding="{Binding Details}" Width="*" Foreground="#2D3748">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>