<Window x:Class="HumanResourcesManagementSystemFinal.Views.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm Nhân Viên Mới" Height="550" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent">
    <Border Background="White" CornerRadius="15" Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Thêm Nhân Viên Mới" FontSize="24" FontWeight="Bold" Foreground="#1A3D64" Margin="0,0,0,30"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Họ (Last Name)" FontWeight="SemiBold" Foreground="#4A5568" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtLastName" Height="40" Padding="10,0" VerticalContentAlignment="Center" BorderBrush="#E2E8F0">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <TextBlock Text="Tên (First Name)" FontWeight="SemiBold" Foreground="#4A5568" Margin="0,15,0,5"/>
                    <TextBox x:Name="txtFirstName" Height="40" Padding="10,0" VerticalContentAlignment="Center" BorderBrush="#E2E8F0">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <TextBlock Text="Email" FontWeight="SemiBold" Foreground="#4A5568" Margin="0,15,0,5"/>
                    <TextBox x:Name="txtEmail" Height="40" Padding="10,0" VerticalContentAlignment="Center" BorderBrush="#E2E8F0">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <TextBlock Text="Địa chỉ" FontWeight="SemiBold" Foreground="#4A5568" Margin="0,15,0,5"/>
                    <TextBox x:Name="txtAddress" Height="40" Padding="10,0" VerticalContentAlignment="Center" BorderBrush="#E2E8F0">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Số điện thoại" FontWeight="SemiBold" Foreground="#4A5568" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtPhone" Height="40" Padding="10,0" VerticalContentAlignment="Center" BorderBrush="#E2E8F0">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <TextBlock Text="Phòng ban" FontWeight="SemiBold" Foreground="#4A5568" Margin="0,15,0,5"/>
                    <ComboBox x:Name="cboDepartment" Height="40" Padding="10,0" VerticalContentAlignment="Center" BorderBrush="#E2E8F0"
                              DisplayMemberPath="DepartmentName">
                        <ComboBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>

                    <TextBlock Text="Chức vụ" FontWeight="SemiBold" Foreground="#4A5568" Margin="0,15,0,5"/>
                    <TextBox x:Name="txtPosition" Height="40" Padding="10,0" VerticalContentAlignment="Center" BorderBrush="#E2E8F0">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                <Button Content="Hủy bỏ" Click="CancelButton_Click"
                        Width="100" Height="40" Background="White" Foreground="#718096" BorderBrush="#E2E8F0" BorderThickness="1" Cursor="Hand" Margin="0,0,15,0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Lưu thông tin" Click="SaveButton_Click"
                        Width="150" Height="40" Background="#1A3D64" Foreground="White" BorderThickness="0" Cursor="Hand" FontWeight="Bold">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
