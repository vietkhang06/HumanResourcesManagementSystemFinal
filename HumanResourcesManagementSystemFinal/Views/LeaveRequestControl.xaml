<UserControl x:Class="HumanResourcesManagementSystemFinal.Views.LeaveRequestControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HumanResourcesManagementSystemFinal.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="Transparent">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1A3D64"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="Control" x:Key="InputControlStyle">
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" CornerRadius="10" Margin="0,0,0,20" Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Direction="-90" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="📝 Tạo Đơn Xin Nghỉ Phép" Style="{StaticResource SectionHeaderStyle}" Grid.Row="0"/>

                <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,15">
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Loại nghỉ:" Foreground="Gray" Margin="0,0,0,5"/>
                        <ComboBox Width="180" Style="{StaticResource InputControlStyle}"
                                  Text="{Binding LeaveType}" IsEditable="True" IsReadOnly="True">
                            <ComboBoxItem Content="Annual" ToolTip="Nghỉ phép năm"/>
                            <ComboBoxItem Content="Sick" ToolTip="Nghỉ ốm"/>
                            <ComboBoxItem Content="Unpaid" ToolTip="Nghỉ không lương"/>
                            <ComboBoxItem Content="Maternity" ToolTip="Thai sản"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Từ ngày:" Foreground="Gray" Margin="0,0,0,5"/>
                        <DatePicker Width="150" Height="35" SelectedDate="{Binding StartDate}"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Đến ngày:" Foreground="Gray" Margin="0,0,0,5"/>
                        <DatePicker Width="150" Height="35" SelectedDate="{Binding EndDate}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,0,0,15">
                    <TextBlock Text="Lý do nghỉ:" Foreground="Gray" Margin="0,0,0,5"/>
                    <TextBox Height="60" TextWrapping="Wrap" AcceptsReturn="True" 
                             Text="{Binding Reason}"
                             BorderBrush="#DDDDDD" Padding="5"/>
                </StackPanel>

                <Button Grid.Row="3" 
                        Command="{Binding SubmitRequestCommand}"
                        Width="120" Height="40" HorizontalAlignment="Right"
                        Foreground="White" FontWeight="Bold"
                        Cursor="Hand" BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#1A3D64"/>

                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SubmitButtonContent}" Value="Cập Nhật">
                                    <Setter Property="Background" Value="#D35400"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <TextBlock Text="{Binding SubmitButtonContent}" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Direction="-90" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="📋 Danh Sách Đơn Nghỉ Phép" Style="{StaticResource SectionHeaderStyle}" Grid.Row="0"/>

                <DataGrid Grid.Row="1" ItemsSource="{Binding LeaveRequests}" 
                          AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                          GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                          Background="White" BorderThickness="0" RowHeight="35">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F0F2F5"/>
                            <Setter Property="Foreground" Value="#1A3D64"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="10,0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Padding="{TemplateBinding Padding}" BorderBrush="Transparent" BorderThickness="0" Background="Transparent">
                                            <ContentPresenter VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E6F2FF"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Binding="{Binding Id}" Width="50"/>

                        <DataGridTemplateColumn Header="NHÂN VIÊN" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center" Margin="5,0,0,0">
                                        <TextBlock Text="{Binding Employee.FirstName}" 
                                               FontWeight="Bold" Foreground="#2D3748" FontSize="14"/>

                                        <TextBlock Text="{Binding EmployeeId, StringFormat='MNV: {0}'}" 
                                               Foreground="#A0AEC0" FontSize="11" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Loại" Binding="{Binding LeaveType}" Width="80"/>

                        <DataGridTextColumn Header="Từ ngày" Binding="{Binding StartDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                        <DataGridTextColumn Header="Đến ngày" Binding="{Binding EndDate, StringFormat=dd/MM/yyyy}" Width="100"/>

                        <DataGridTemplateColumn Header="LÝ DO" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Background="Transparent" BorderThickness="0" Cursor="Hand" 
                                        HorizontalAlignment="Center" VerticalAlignment="Center">

                                        <Border Background="#E2E8F0" Width="24" Height="24" CornerRadius="12">
                                            <TextBlock Text="i" FontFamily="Times New Roman" FontStyle="Italic" FontWeight="Bold" 
                                                   Foreground="#4A5568" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
                                        </Border>

                                        <Button.ToolTip>
                                            <ToolTip Background="White" BorderBrush="#E2E8F0" BorderThickness="1" Padding="10">
                                                <StackPanel MaxWidth="300">
                                                    <TextBlock Text="Lý Do Nghỉ Phép" FontWeight="Bold" Foreground="#1A3D64" Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding Reason}" TextWrapping="Wrap" Foreground="#4A5568"/>
                                                </StackPanel>
                                            </ToolTip>
                                        </Button.ToolTip>

                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <ContentPresenter/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Opacity" Value="0.7"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="TRẠNG THÁI" Width="130">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="6" Padding="12,4" HorizontalAlignment="Left" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Status}" FontWeight="Bold" FontSize="11" 
                                               Typography.Capitals="AllSmallCaps"/>

                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                        <Setter Property="Background" Value="#FEFCBF"/>
                                                        <Setter Property="TextBlock.Foreground" Value="#744210"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Đang chờ">
                                                        <Setter Property="Background" Value="#FEFCBF"/>
                                                        <Setter Property="TextBlock.Foreground" Value="#744210"/>
                                                    </DataTrigger>

                                                    <DataTrigger Binding="{Binding Status}" Value="Approved">
                                                        <Setter Property="Background" Value="#C6F6D5"/>
                                                        <Setter Property="TextBlock.Foreground" Value="#22543D"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Thông qua">
                                                        <Setter Property="Background" Value="#C6F6D5"/>
                                                        <Setter Property="TextBlock.Foreground" Value="#22543D"/>
                                                    </DataTrigger>

                                                    <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                        <Setter Property="Background" Value="#FED7D7"/>
                                                        <Setter Property="TextBlock.Foreground" Value="#822727"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Từ chối">
                                                        <Setter Property="Background" Value="#FED7D7"/>
                                                        <Setter Property="TextBlock.Foreground" Value="#822727"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="HÀNH ĐỘNG" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                                    Visibility="{Binding DataContext.IsManager, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}">

                                            <Button ToolTip="Chấp thuận" Margin="0,0,5,0" Width="30" Height="25" Background="#27AE60" BorderThickness="0" Cursor="Hand"
                                                    Command="{Binding DataContext.ApproveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}">
                                                <TextBlock Text="✔" Foreground="White" FontWeight="Bold"/>
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="3"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>

                                            <Button ToolTip="Từ chối" Width="30" Height="25" Background="#C0392B" BorderThickness="0" Cursor="Hand"
                                                    Command="{Binding DataContext.RejectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}">
                                                <TextBlock Text="✘" Foreground="White" FontWeight="Bold"/>
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="3"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsManager, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>

                                            <Button ToolTip="Chỉnh sửa" Margin="0,0,5,0" Background="Transparent" BorderThickness="0" Cursor="Hand"
                                                    Command="{Binding DataContext.PrepareEditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}">
                                                <Border Background="#EBF8FF" CornerRadius="5" Width="28" Height="28">
                                                    <Path Data="M441 58.9L453.1 71c9.4 9.4 9.4 24.6 0 33.9L424 134.1 377.9 88 407 58.9c9.4-9.4 24.6-9.4 33.9 0zM209.8 256.2L344 121.9 390.1 168 255.8 302.2c-2.9 2.9-6.5 5-10.4 6.1l-58.5 16.7 16.7-58.5c1.1-3.9 3.2-7.5 6.1-10.4zM373.1 25L175.8 222.2c-8.7 8.7-15 19.4-18.3 31.1l-28.6 100c-2.4 8.4-.1 17.4 6.1 23.6s15.2 8.5 23.6 6.1l100-28.6c11.8-3.4 22.5-9.7 31.1-18.3L487 138.9c28.1-28.1 28.1-73.7 0-101.8L474.9 25C446.8-3.1 401.2-3.1 373.1 25zM88 64C39.4 64 0 103.4 0 152L0 424c0 48.6 39.4 88 88 88l272 0c48.6 0 88-39.4 88-88l0-112c0-13.3-10.7-24-24-24s-24 10.7-24 24l0 112c0 22.1-17.9 40-40 40L88 464c-22.1 0-40-17.9-40-40l0-272c0-22.1 17.9-40 40-40l112 0c13.3 0 24-10.7 24-24s-10.7-24-24-24L88 64z"
                                                          Fill="#2B6CB0" Width="12" Height="12" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </Button>

                                            <Button ToolTip="Hủy yêu cầu" Background="Transparent" BorderThickness="0" Cursor="Hand"
                                                    Command="{Binding DataContext.DeleteRequestCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}">
                                                <Border Background="#FFF5F5" CornerRadius="5" Width="28" Height="28">
                                                    <Path Data="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"
                                                     Fill="#C53030" Width="12" Height="12" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>