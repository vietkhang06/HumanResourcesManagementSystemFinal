<UserControl x:Class="HumanResourcesManagementSystemFinal.Views.TimeSheetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:HumanResourcesManagementSystemFinal.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000" Background="Transparent">

    <UserControl.DataContext>
        <vm:TimeSheetViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#1A3D64" CornerRadius="15" Margin="0,0,20,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Opacity="0.2"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center" Margin="20">
                <TextBlock Text="{Binding CurrentTimeStr}" 
                           FontSize="48" FontWeight="Bold" Foreground="White" 
                           HorizontalAlignment="Center"/>

                <TextBlock Text="{Binding CurrentDateStr}" 
                           FontSize="16" Foreground="#A0AEC0" 
                           HorizontalAlignment="Center" Margin="0,5,0,20"/>

                <Border Background="{Binding TodayStatusColor}" CornerRadius="20" 
                        Padding="15,5" HorizontalAlignment="Center" Margin="0,0,0,40">
                    <TextBlock Text="{Binding TodayStatusText}" 
                               Foreground="White" FontWeight="Bold"/>
                </Border>

                <Button Command="{Binding CheckInCommand}" IsEnabled="{Binding CanCheckIn}"
                        Height="60" Margin="0,0,0,15" Cursor="Hand"
                        Background="#38A169" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="▶" Margin="0,0,10,0" FontSize="18"/>
                        <TextBlock Text="BẮT ĐẦU CA (Check In)" FontWeight="Bold" FontSize="16"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding CheckOutCommand}" IsEnabled="{Binding CanCheckOut}"
                        Height="60" Cursor="Hand"
                        Background="#E53E3E" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⏹" Margin="0,0,10,0" FontSize="18"/>
                        <TextBlock Text="KẾT THÚC CA (Check Out)" FontWeight="Bold" FontSize="16"/>
                    </StackPanel>
                </Button>

                <Grid Margin="0,40,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1" />
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#2C5282" CornerRadius="10" Padding="15" Margin="0,0,5,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="Giờ vào" Foreground="#A0AEC0" FontSize="12"/>
                            <TextBlock Text="{Binding TodayCheckInStr}" Foreground="White" FontWeight="Bold" FontSize="20" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="#2C5282" CornerRadius="10" Padding="15" Margin="5,0,0,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="Giờ ra" Foreground="#A0AEC0" FontSize="12"/>
                            <TextBlock Text="{Binding TodayCheckOutStr}" Foreground="White" FontWeight="Bold" FontSize="20" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="White" CornerRadius="15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Opacity="0.1"/>
            </Border.Effect>

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="📄 Lịch Sử Chấm Công" FontSize="24" FontWeight="Bold" Foreground="#1A3D64"/>
                        <TextBlock Text="Tháng hiện tại" Foreground="#718096" Margin="0,5,0,0"/>
                    </StackPanel>
                    <Button Content="Xuất Báo Cáo" HorizontalAlignment="Right" VerticalAlignment="Top" Padding="15,8" Background="#EDF2F7" Foreground="#2D3748" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>

                <DataGrid Grid.Row="1" ItemsSource="{Binding HistoryList}" AutoGenerateColumns="False" 
                          CanUserAddRows="False" IsReadOnly="True" GridLinesVisibility="Horizontal"
                          Background="White" BorderThickness="0" RowHeight="50"
                          HorizontalGridLinesBrush="#EDF2F7" HeadersVisibility="Column">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#718096"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="BorderBrush" Value="#E2E8F0"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="NGÀY" Binding="{Binding Date, StringFormat=dd/MM/yyyy}" Width="*" FontWeight="SemiBold" Foreground="#2D3748"/>

                        <DataGridTextColumn Header="CHECK IN" Binding="{Binding CheckInText}" Width="100" Foreground="#38A169" FontWeight="Bold"/>

                        <DataGridTextColumn Header="CHECK OUT" Binding="{Binding CheckOutText}" Width="100" Foreground="#E53E3E" FontWeight="Bold"/>

                        <DataGridTextColumn Header="TỔNG GIỜ" Binding="{Binding TotalHoursText}" Width="100" FontWeight="SemiBold" Foreground="#2B6CB0"/>

                        <DataGridTemplateColumn Header="TRẠNG THÁI" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding StatusColor}" CornerRadius="12" Padding="10,4" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding StatusText}" Foreground="White" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>