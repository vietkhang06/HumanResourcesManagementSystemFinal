<Window x:Class="HumanResourcesManagementSystemFinal.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:HumanResourcesManagementSystemFinal.ViewModels"
        mc:Ignorable="d"
        Title="Hệ Thống Quản Lý Nhân Sự" Height="650" Width="1100"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        MouseDown="Window_MouseDown">

    <d:Window.DataContext>
        <vm:MainViewModel/>
    </d:Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style TargetType="Button" x:Key="MenuButtonStyle">
            <Setter Property="Foreground" Value="#1A3D64"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center" 
                                              Margin="{TemplateBinding Padding}"
                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1A3D64"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="#F9F8F6" CornerRadius="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Direction="-90" RenderingBias="Quality" ShadowDepth="2" Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="20,0,0,20" Panel.ZIndex="1">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="0" ShadowDepth="3" BlurRadius="15" Opacity="0.15"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,40,0,30">
                        <TextBlock Text="HRMS PRO" Foreground="#1A3D64" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Management System" Foreground="#BDC3C7" FontSize="12" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1">
                        <Button Content="🏠   Trang Chủ" 
                                Command="{Binding NavigateHomeCommand}"
                                Style="{StaticResource MenuButtonStyle}"/>

                        <Button Content="👥   Quản Lý Nhân Viên" 
                                Command="{Binding NavigateEmployeeCommand}"
                                Style="{StaticResource MenuButtonStyle}"
                                Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}"/>

                        <Button Content="🏢   Phòng Ban &amp; Vị Trí" 
                                Command="{Binding NavigateDepartmentCommand}"
                                Style="{StaticResource MenuButtonStyle}"
                                Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}"/>

                        <Button Content="💰   Tính Lương" 
                                Command="{Binding NavigatePayrollCommand}"
                                Style="{StaticResource MenuButtonStyle}"
                                Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}"/>

                        <Button Content="👤   Hồ Sơ Của Tôi" 
                                Command="{Binding NavigateProfileCommand}"
                                Style="{StaticResource MenuButtonStyle}"/>

                        <Button Content="📝   Quản Lý Nghỉ Phép" 
                                Command="{Binding NavigateLeaveRequestCommand}"
                                Style="{StaticResource MenuButtonStyle}"/>

                        <Button Content="📅   Chấm Công" 
                                Command="{Binding NavigateTimeSheetCommand}"
                                Style="{StaticResource MenuButtonStyle}"/>
                    </StackPanel>

                    <Button Grid.Row="2" VerticalAlignment="Bottom" Margin="15,0,15,20" Height="65"
                            Background="#FFE2EAF3" BorderThickness="0" Cursor="Hand"
                            Click="UserProfile_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="12" Padding="10,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse Grid.Column="0" Width="40" Height="40">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding CurrentUserAvatar}" Stretch="UniformToFill"/>
                                            </Ellipse.Fill>
                                            <Ellipse.Effect>
                                                <DropShadowEffect BlurRadius="4" Opacity="0.2" ShadowDepth="2"/>
                                            </Ellipse.Effect>
                                        </Ellipse>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,5,0">
                                            <TextBlock Text="{Binding CurrentUserName}" 
                                                       Foreground="#1A3D64" FontWeight="Bold" FontSize="13"
                                                       TextTrimming="CharacterEllipsis"/>

                                            <TextBlock Text="{Binding CurrentUserJob}" 
                                                       Foreground="#95A5A6" FontSize="11" 
                                                       Margin="0,2,0,0" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="2" Text="▼" 
                                                   Foreground="#BDC3C7" FontSize="10" 
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#F0F3F4"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>

                        <Button.ContextMenu>
                            <ContextMenu StaysOpen="False" Placement="Top">
                                <ContextMenu.Resources>
                                    <Style TargetType="MenuItem">
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="Padding" Value="10,8"/>
                                        <Setter Property="Height" Value="35"/>
                                        <Setter Property="Foreground" Value="#1A3D64"/>
                                    </Style>
                                </ContextMenu.Resources>

                                <MenuItem Header="👤  Hồ sơ cá nhân" Command="{Binding NavigateProfileCommand}"/>
                                <MenuItem Header="🔑  Đổi mật khẩu" Command="{Binding NavigateChangePasswordCommand}"/>
                                <Separator/>
                                <MenuItem Header="🚪  Đăng Xuất" 
                                          Foreground="#C0392B" FontWeight="Bold"
                                          Click="BtnLogout_Click"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </Grid>
            </Border>

            <Grid Grid.Column="1">
                <Grid VerticalAlignment="Top" Height="50">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,15,0">
                        <Button Content="—" Width="30" Height="30" Background="Transparent" BorderThickness="0" FontSize="14" Click="btnMinimize_Click" Foreground="#1A3D64"/>
                        <Button Content="✕" Width="30" Height="30" Background="Transparent" BorderThickness="0" FontSize="16" FontWeight="Bold" Foreground="#B43F3F" Click="btnClose_Click"/>
                    </StackPanel>

                    <TextBlock Text="{Binding PageTitle}" 
                               VerticalAlignment="Center" HorizontalAlignment="Left" Margin="30,0,0,0" 
                               FontSize="22" FontWeight="SemiBold" Foreground="#1A3D64"/>
                </Grid>

                <ContentControl Content="{Binding CurrentView}" Margin="20,60,20,20"/>
            </Grid>
        </Grid>
    </Border>
</Window>