        <SolidColorBrush x:Key="PrimaryColor" Color="#102f76"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#4285F4"/>
        <SolidColorBrush x:Key="GrayText" Color="#777"/>
        <SolidColorBrush x:Key="InputBackground" Color="#F5F7FA"/>

