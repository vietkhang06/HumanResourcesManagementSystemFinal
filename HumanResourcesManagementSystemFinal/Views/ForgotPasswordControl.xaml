<UserControl x:Class="HumanResourcesManagementSystemFinal.Views.ForgotPasswordControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">

    <Grid Margin="40">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Quên Mật Khẩu?" FontSize="28" FontWeight="Bold" Foreground="#102f76" Margin="0,0,0,5"/>
            <TextBlock Text="Nhập email để lấy lại mật khẩu." FontSize="14" Foreground="#FF00174C" Margin="0,0,0,30"/>

            <TextBlock Text="Email đăng ký" FontWeight="SemiBold" Foreground="#102f76" Margin="0,0,0,8"/>
            <Border CornerRadius="8" BorderThickness="1" BorderBrush="#E5E7EB" Background="#F9FAFB" Height="45">
                <TextBox FontSize="14" VerticalContentAlignment="Center" Padding="10,0"
                         Background="Transparent" BorderThickness="0"/>
            </Border>

            <!-- Nút Gửi -->
            <Button Content="GỬI YÊU CẦU"
                    Height="50" Margin="0,35,0,0"
                    Background="#102f76" Foreground="#f9f8f6"
                    FontSize="16" FontWeight="Bold" Cursor="Hand" BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>

            <!-- Nút Quay lại -->
            <Button Command="{Binding SwitchToLoginCommand}"
                    Content="← Quay lại Đăng nhập" 
                    HorizontalAlignment="Center" Margin="0,20,0,0"
                    Background="Transparent" BorderThickness="0" 
                    Foreground="#FF00174C" Cursor="Hand" FontSize="14"/>
        </StackPanel>
    </Grid>
</UserControl>